{% extends 'base.html.twig' %}
  
{% block title %}Show Categories{% endblock %}
  
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Show Categories</h2>
        {% if app.request.query.get('new_message') != '' %}
            <h2 class="text-center mt-5 mb-3">{{app.request.query.get('new_message')}}</h2>
        {% endif %}
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('category_new') }}"> 
                    New Category
                </a>
                <a class="btn btn-outline-primary" href="{{ path('post_index') }}"> 
                    Return to post
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>id</th>
                        <th>Name</th>
                    </tr>
                    {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
  
{% endblock %}